.page{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100%;
  width: 100%;
  overflow: auto;
  display: flex;
  flex-direction: column;
}
.top-movie{
  margin-top:15px;
  position: relative;
  height: 229px;
}
.video{
  width:100%;
  height:100%;
}
.movie-zhuanfa{
  width:40rpx;
  height:40rpx;
  position: absolute;
  top:20rpx;
  right:20rpx;
  z-index: 999;
}
.discuss-title{
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #000;
  border-bottom:2px solid #EBEBEB; 
}
.bottom-discuss{
  position: absolute;
  top:244px;
  bottom: 0;
  left:0;
  right: 0;
}
.discuss-item{
  padding: 5px;
  border-bottom:1px solid #CCCCCC;
  display: flex;
  flex-direction: column; 
}
.item-member image{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  border:1px solid #C1C1C1;
  margin-right:10px; 
}
.item-member text{
  font-size:14px;
  font-weight: 700;
}
.item-content{
  padding: 0 10%;
  margin: 10px 0px;
}
.item-day{
  padding: 0 10%;
}
.day-left{
  font-size:12px; 
  color:#666;
  margin-right:10px; 
}
.day-right{
  font-size:14px; 
}
.no_discuss{
  width:100;
  height:300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.no_discuss_image{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom:20px; 
}
.no_discuss_image image {
    height: 100rpx;
    width: 100rpx;
}
.child-image{
  width:40rpx;
  height:40rpx;
  border: 1px solid  #C1C1C1;
  border-radius: 50%;
  vertical-align:middle;
}
.child-text{
  font-size: 12px;
  font-weight: 700;
  margin-left:5px; 
  margin-right:5px;
}
.child-item{
  margin: 10px 0;
}
.placeholder-class{
  height:30px;
  line-height:30px;
}
.send_content{
  width:100%;
  height:30px;
  position:fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: row;
}
.send_text{
  line-height: 30px;
  height:30px;
  text-align: center;
  width:15%;
}
.send_textarea{
  line-height: 30px;
  width:85%;
  height:30px;
  background:#fff;
  padding: 0 15px;
  position: static;
}
.page_background{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width:100%;
  height:100%;
  z-index: 1;
  transition:0.5s;
  background:rgba(0,0,0,0);
}

