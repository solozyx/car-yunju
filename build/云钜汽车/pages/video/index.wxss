.fui-nav {
  height: 90rpx;
  background: rgba(0, 0, 0, 0.1);
}

.image-48 {
  margin-right: 30rpx;
}

.local, .tel {
  margin: 8rpx 0;
}
.fui-header {
  height:88rpx;
  width:100%;
  box-sizing:border-box;
  font-size:32rpx;
  position:fixed;
  top:0;
  margin:0;
  z-index:999;
  -webkit-backface-visibility:hidden;
  backface-visibility:hidden;
  display:-webkit-flex;
  display:flex;
  -webkit-justify-content:space-between;
  justify-content:space-between;
  -webkit-align-items:center;
  align-items:center;

}

.fui-header {
z-index:10002;
display:-webkit-flex;
display:flex;
padding:0 15rpx;
background: #fff;
}
.fui-header .searchbar {
  -webkit-flex: 1;
  flex: 1;
  background: #f3f3f3;
  border-radius: 8rpx;
  margin: 0 auto;
  display: -webkit-flex;
  display: flex;
  overflow: hidden;
  -webkit-align-items: center;
  align-items: center;
}

.search_content {
  position: relative;
  width: 85%;
  display: flex;
  flex-direction: row;
  background: #f3f3f3;
  margin: 0 auto;
  border-radius: 30rpx;
  height: 60rpx;
}

.search_button {
  background: #ffa42f;
  color: #fff;
  height: 50rpx;
  width: 120rpx;
  text-align: center;
  border-radius: 30rpx;
  position: absolute;
  right: 6rpx;
  top: 5rpx;
}

.search_icon {
  position: relative;
  left: 10rpx;
  top: 15rpx;
  margin-right: 13px;
}

.search_input {
  height: 60rpx;
  font-size: 22rpx;
}

.body-box {
  margin-top: 15px;
  margin-bottom: 15px;
  position: fixed;
  width: 100%;
  top: 80rpx;
  height: 1000rpx;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.video{
  width:100%;
  height:100%;
}
.body-content {
  background: #fff;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  margin-bottom: 10px;
}
.content-title-box{
  display: flex;
  flex-direction: column;
  padding: 0 10px;
  margin: 5px 0;
}
.title-text{
  font-size: 16px;
  font-weight: 700;
}
.title-time{
  font-size: 12px;
  color: #707070;
}
.content-video-box{
  position: relative;
  /* min-height:400rpx; */
}
.content-video-box .play-icon{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right:0;
  margin: auto;
  width: 60px;
  height: 60px;
}
.content-video-box image{
  width: 100%;
}
.content-bottom-box{
  display: flex;
  flex-direction: row;
  margin: 5px 0;
  padding: 0 10px;
}
.icon-eyes{
  width:40rpx;
  height: 40rpx;
  vertical-align:middle;
  margin-right:5px; 
}
.bottom-left{
  justify-content: flex-start;
  width:50%;
}
.bottom-right{
  width:50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.icon_text{
  font-size: 14px;
  color: #707070;
}
.bottom-right-chat{
  margin-right: 40rpx;
}
